@model SearchPic.Models.LocalImageMetadata

@{
    ViewData["Title"] = "Upload Confirmation";
}

<h2>Upload Successful</h2>
<div>
    <h3>Description</h3>
    <p>@Model.Description</p>
    <h3>Keywords</h3>
    <p>@string.Join(", ", Model.Keywords)</p>
    <h3>Image</h3>
    <img src="@Model.ImageUrl" alt="Uploaded Image" style="max-width: 100%; height: auto;" />
    <br />
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
